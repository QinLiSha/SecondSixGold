<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_tv_box"
            android:layout_width="@dimen/px_0"
            android:layout_height="@dimen/px_80"
            android:layout_margin="@dimen/px_10"
            android:layout_weight="0.5"
            android:background="@drawable/gradview_item_box" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_tv_box_choosed"
            android:layout_width="@dimen/px_0"
            android:layout_height="@dimen/px_80"
            android:layout_margin="@dimen/px_10"
            android:layout_weight="0.5"
            android:background="@drawable/gradview_item_box_choosed"
            android:visibility="invisible" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_itemText"
        style="@style/my_textview_style_normal_black"
        android:layout_gravity="center"
        android:text="选择类型"
        android:textColor="@color/black" />
</FrameLayout>
