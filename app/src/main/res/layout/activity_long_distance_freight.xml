<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_long_distance_freight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lisa.administrator.sixgold.activity.HomeLongDistanceFreightActivity">


    <com.lisa.administrator.sixgold.view.ActionBarOneImg
        android:id="@+id/actionbarView_oneImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/px_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_low_item_height">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/px_10"
                            android:background="@drawable/ic_add_location_orange_24dp" />

                        <TextView
                            style="@style/my_textview_style_normal_black"
                            android:text="@string/from" />

                        <TextView
                            style="@style/my_textview_style_normal_default"
                            android:text="@string/please_choose_the_provincial_city" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/editText2"
                    style="@style/my_edittext_style_normal"
                    android:layout_width="match_parent"
                    android:hint="@string/please_fill_in_detail_address" />

                <EditText
                    android:id="@+id/editText3"
                    style="@style/my_edittext_style_normal"
                    android:layout_width="match_parent"
                    android:hint="@string/please_fill_in_sender_name" />


                <EditText
                    style="@style/my_edittext_style_normal"
                    android:layout_width="match_parent"
                    android:hint="@string/please_fill_in_sender_tel" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_low_item_height">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/px_10"
                            android:background="@drawable/ic_add_location_orange_24dp" />

                        <TextView
                            style="@style/my_textview_style_normal_black"
                            android:text="@string/to" />

                        <TextView
                            style="@style/my_textview_style_normal_default"
                            android:text="@string/please_choose_the_provincial_city" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
                </RelativeLayout>


                <EditText
                    android:id="@+id/editText4"
                    style="@style/my_edittext_style_normal"
                    android:layout_width="match_parent"
                    android:hint="@string/please_fill_in_detail_address" />

                <EditText
                    style="@style/my_edittext_style_normal"
                    android:layout_width="match_parent"
                    android:hint="@string/please_fill_in_recipient_name" />


                <EditText
                    style="@style/my_edittext_style_normal"
                    android:layout_width="match_parent"
                    android:hint="@string/please_fill_in_recipient_tel" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_actionbar_item_height"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_15"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/my_textview_style_normal_default"
                        android:text="@string/is_need_invoice" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_check_circle_grey_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/px_5"
                        android:background="@drawable/ic_create_grey_24dp" />

                    <TextView

                        style="@style/my_textview_style_normal_black"
                        android:text="@string/order_note" />

                </LinearLayout>

                <EditText
                    style="@style/my_edittext_style_normal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:hint="@string/matters_need_attention_details" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_5"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_actionbar_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/px_10"
                        android:background="@drawable/ic_create_grey_24dp" />

                    <EditText
                        style="@style/my_edittext_style_normal"
                        android:layout_width="match_parent"
                        android:hint="@string/please_fill_in_the_name_of_the_goods" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_actionbar_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/px_10"
                        android:background="@drawable/ic_create_grey_24dp" />

                    <EditText
                        android:id="@+id/editText7"
                        style="@style/my_edittext_style_normal"
                        android:layout_width="match_parent"
                        android:hint="@string/please_fill_in_the_weight_of_the_goods" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/my_textview_style_normal_default"
                android:text="添加货物照片，方便司机查看：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/px_150"
                    android:layout_height="@dimen/px_150"
                    android:background="@mipmap/jia"
                    android:layout_margin="@dimen/px_10"
                    android:id="@+id/imageView7" />

                <ImageView
                    android:layout_width="@dimen/px_150"
                    android:layout_height="@dimen/px_150"
                    android:layout_margin="@dimen/px_10"
                    android:background="@mipmap/jia"
                    android:id="@+id/imageView8" />

                <ImageView
                    android:layout_width="@dimen/px_150"
                    android:layout_margin="@dimen/px_10"
                    android:layout_height="@dimen/px_150"
                    android:background="@mipmap/jia" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_actionbar_item_height"
                    android:layout_marginBottom="@dimen/px_5">

                    <ImageView
                        android:id="@+id/iv_pen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/px_5"
                        android:background="@drawable/ic_create_grey_24dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/dp_10"
                        android:background="@drawable/ic_chevron_right_grey_24dp" />

                    <TextView
                        android:id="@+id/textView"
                        style="@style/my_textview_style_normal_black"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/iv_pen"
                        android:layout_toRightOf="@+id/iv_pen"
                        android:text="@string/insurance_purchase"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_low_item_height"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_check_circle_blue_24dp" />

                    <TextView
                        style="@style/my_textview_style_normal_default"
                        android:text="@string/I_have_read_and_agreed" />

                    <TextView
                        style="@style/my_textview_style_normal_default"
                        android:text="@string/service_agreement"
                        android:textColor="@color/orange" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_actionbar_item_height"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:weightSum="10.1">

                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@color/white"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_instant_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/ic_create_grey_24dp" />

                    <TextView
                        style="@style/my_textview_style_normal_default"

                        android:text="@string/instant_car"
                        android:layout_alignTop="@+id/iv_instant_car"
                        android:layout_toRightOf="@+id/iv_instant_car"
                        android:layout_toEndOf="@+id/iv_instant_car"
                        android:id="@+id/textView16" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1" />

                <RelativeLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="5"
                    android:background="@color/white"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_make_an_appointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@drawable/ic_create_grey_24dp" />

                    <TextView
                        style="@style/my_textview_style_normal_default"

                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_make_an_appointment"
                        android:text="@string/make_an_appointment" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
