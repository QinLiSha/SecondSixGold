<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lisa.administrator.sixgold.activity.home.CarTypeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_high_item_height"
        android:background="@color/themeBlue"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10"
        android:weightSum="15">

        <RelativeLayout
            android:id="@+id/rl_from_address"
            android:layout_width="@dimen/px_0"
            android:layout_height="@dimen/activity_car_type_textview_border_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/px_7"
            android:layout_weight="5"
            android:background="@drawable/shape_rounded_rectangle_yellow">

            <TextView
                android:id="@+id/tv_from"
                style="@style/my_textview_style_normal_default"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="从" />

            <TextView
                android:id="@+id/tv_from_address"
                style="@style/my_textview_style_small_black"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_from"
                android:lines="1"
                android:maxLength="6"
                android:text="发货地址" />


            <ImageView
                android:id="@+id/iv_from_address_1"
                android:layout_width="@dimen/px_30"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_to_address"
            android:layout_width="@dimen/px_0"
            android:layout_height="@dimen/activity_car_type_textview_border_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/px_7"
            android:layout_weight="5"
            android:background="@drawable/shape_rounded_rectangle_yellow">

            <ImageView
                android:id="@+id/iv_to_address_1"
                android:layout_width="@dimen/px_30"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_drop_down_black_24dp" />

            <TextView
                android:id="@+id/tv_to"
                style="@style/my_textview_style_normal_default"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"
                android:maxLength="5"
                android:text="到" />

            <TextView
                android:id="@+id/tv_to_address"
                style="@style/my_textview_style_small_black"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_to"
                android:lines="1"
                android:maxLength="6"
                android:text="收货地址" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cartype_carlength"
            android:layout_width="@dimen/px_0"
            android:layout_height="@dimen/activity_car_type_textview_border_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/px_7"
            android:layout_weight="5"
            android:background="@drawable/shape_rounded_rectangle_yellow">

            <TextView
                android:id="@+id/tv_cartype_carlength"
                style="@style/my_textview_style_small_black"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:lines="1"
                android:maxLength="10"
                android:text="车型车长" />

            <ImageView
                android:id="@+id/iv_cartype_carlength_1"
                android:layout_width="@dimen/px_30"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_high_item_height"
        android:background="@color/themeBlue"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10"
        android:weightSum="15">

        <RelativeLayout
            android:id="@+id/rl_transport_type"
            android:layout_width="@dimen/px_0"
            android:layout_height="@dimen/activity_car_type_textview_border_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/px_7"
            android:layout_weight="5"
            android:background="@drawable/shape_rounded_rectangle_yellow">

            <ImageView
                android:id="@+id/iv_transport_type_1"
                android:layout_width="@dimen/px_30"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_drop_down_black_24dp" />

            <TextView
                android:id="@+id/tv_transport_type"
                style="@style/my_textview_style_small_black"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:lines="1"
                android:maxLength="10"
                android:text="单程" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_date"
            android:layout_width="@dimen/px_0"
            android:layout_height="@dimen/activity_car_type_textview_border_height"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/px_7"
            android:layout_weight="5"
            android:background="@drawable/shape_rounded_rectangle_yellow">


            <ImageView
                android:id="@+id/iv_date_1"
                android:layout_width="@dimen/px_30"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_drop_down_black_24dp" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/my_textview_style_small_black"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:lines="1"
                android:text="2017-05-06" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_choose_type"
            android:layout_width="@dimen/px_0"
            android:layout_height="67px"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/px_7"
            android:layout_weight="5"
            android:background="@drawable/shape_rounded_rectangle_yellow">

            <TextView
                android:id="@+id/tv_choose_type"
                style="@style/my_textview_style_small_black"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:lines="1"
                android:maxLength="4"
                android:text="车源信息" />

            <ImageView
                android:id="@+id/iv_choose_type_1"
                android:layout_width="@dimen/px_30"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_car_type_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <LinearLayout
        android:id="@+id/ll_home_bottom_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_actionbar_item_height"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/ll_home_homepage"
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_homepage"
                android:layout_width="@dimen/px_30"
                android:layout_height="@dimen/px_30"
                android:layout_margin="@dimen/px_5"
                android:background="@mipmap/iv_home_homepage" />

            <TextView
                android:id="@+id/tv_home_homepage"
                style="@style/my_textview_style_normal_default_nopadding"
                android:text="@string/homepage"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_car_type"
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_car_type"
                android:layout_width="@dimen/px_35"
                android:layout_height="@dimen/px_30"
                android:layout_gravity="center"
                android:layout_margin="@dimen/px_5"
                android:background="@mipmap/iv_car_type_choosed" />

            <TextView
                android:id="@+id/tv_car_type"
                style="@style/my_textview_style_normal_default_nopadding"
                android:text="@string/car_type"
                android:textColor="@color/themeBlue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home_I"
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_I"
                android:layout_width="@dimen/px_35"
                android:layout_height="@dimen/px_30"
                android:layout_margin="@dimen/px_5"
                android:background="@mipmap/iv_home_i" />

            <TextView
                android:id="@+id/tv_home_I"
                style="@style/my_textview_style_normal_default_nopadding"
                android:text="@string/I"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home_mail_list"
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_home_mail_list"
                android:layout_width="@dimen/px_35"
                android:layout_height="@dimen/px_30"
                android:layout_gravity="center"
                android:layout_margin="@dimen/px_5"
                android:background="@mipmap/iv_home_mail_list" />

            <TextView
                android:id="@+id/tv_home_mail_list"
                style="@style/my_textview_style_normal_default_nopadding"
                android:text="@string/mail_list"
                android:textColor="@color/gray" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
