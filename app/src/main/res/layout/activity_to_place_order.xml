<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_to_place_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lisa.administrator.sixgold.activity.order.ToPlaceOrderActivity">

    <com.lisa.administrator.sixgold.view.ActionBarTwoImg
        android:id="@+id/actionbarView_twoImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/lightgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_actionbar_item_height"
        android:background="@color/themeBlue"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_legwork"
            style="@style/my_textview_style_normal_white"
            android:layout_width="@dimen/px_0"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="跑腿"
            android:textColor="@color/gold" />

        <TextView
            android:id="@+id/tv_express"
            style="@style/my_textview_style_normal_white"
            android:layout_width="@dimen/px_0"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="快递" />

        <TextView
            android:id="@+id/tv_logistics"
            style="@style/my_textview_style_normal_white"
            android:layout_width="@dimen/px_0"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="物流" />

        <TextView
            android:id="@+id/tv_long_distance_freight"
            style="@style/my_textview_style_normal_white"
            android:layout_width="@dimen/px_0"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="长途货运" />

        <TextView
            android:id="@+id/tv_local_city_freight"
            style="@style/my_textview_style_normal_white"
            android:layout_width="@dimen/px_0"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="同城货运" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_10"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:id="@+id/contianer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></RelativeLayout>

</LinearLayout>
