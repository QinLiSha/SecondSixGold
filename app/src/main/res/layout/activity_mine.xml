<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.lisa.administrator.sixgold.activity.home.MineActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_actionbar_item_height"
        android:background="@color/themeBlue">


        <ImageView
            android:id="@+id/iv_mine_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px_10" />

        <ImageView
            android:id="@+id/iv_mine_notice"
            android:layout_width="@dimen/px_40"
            android:layout_height="@dimen/px_35"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_30"
            android:layout_toLeftOf="@+id/iv_mine_setting"
            android:background="@mipmap/new_notice" />

        <ImageView
            android:id="@+id/iv_mine_setting"
            android:layout_width="@dimen/px_35"
            android:layout_height="@dimen/px_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px_10"
            android:background="@mipmap/iv_mine_setting" />

        <TextView
            android:id="@+id/tv_mine_title"
            style="@style/my_textview_style_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_my_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_1"
        android:background="@color/themeBlue"
        android:orientation="horizontal"
        android:padding="@dimen/px_10">

        <ImageView
            android:id="@+id/iv_my_head_image"
            android:layout_width="@dimen/px_150"
            android:layout_height="@dimen/px_150"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/iv_my_head_image" />

        <LinearLayout
            android:id="@+id/ll_my_information_right"
            android:layout_width="@dimen/px_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_to_authenticate"
                    android:layout_width="@dimen/px_40"
                    android:layout_height="@dimen/px_40"
                    android:background="@mipmap/iv_to_authenticate" />

                <TextView
                    android:id="@+id/tv_to_authenticate"
                    style="@style/my_textview_style_normal_default"
                    android:text="去认证"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/iv_to_authenticate_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_chevron_right_grey_24dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_my_name"
                style="@style/my_textview_style_normal_black"
                android:text="未认证用户"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_vip"
                    style="@style/my_textview_style_normal_default"
                    android:background="@drawable/view_border_blue"
                    android:text="普通会员"
                    android:textColor="@color/themeBlue" />

                <TextView
                    android:id="@+id/tv_trust_proint"
                    style="@style/my_textview_style_normal_default"
                    android:layout_marginLeft="@dimen/px_10"
                    android:text="诚信指数："
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/star_1"
                    android:layout_width="@dimen/px_35"
                    android:layout_height="@dimen/px_35"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_star_collection_24dp" />

                <ImageView
                    android:id="@+id/star_2"
                    android:layout_width="@dimen/px_35"
                    android:layout_height="@dimen/px_35"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_star_collection_24dp" />

                <ImageView
                    android:id="@+id/star_3"
                    android:layout_width="@dimen/px_35"
                    android:layout_height="@dimen/px_35"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_star_collection_24dp" />

                <ImageView
                    android:id="@+id/star_4"
                    android:layout_width="@dimen/px_35"
                    android:layout_height="@dimen/px_35"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_star_collection_24dp" />

                <ImageView
                    android:id="@+id/star_5"
                    android:layout_width="@dimen/px_35"
                    android:layout_height="@dimen/px_35"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_star_collection_24dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:layout_marginBottom="@dimen/px_1"
        android:layout_marginTop="@dimen/px_1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="3">


        <LinearLayout
            android:id="@+id/ll_get_money"
            android:layout_width="@dimen/px_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/px_5">

            <ImageView
                android:id="@+id/iv_get_money"
                android:layout_width="@dimen/px_60"
                android:layout_height="@dimen/px_50"
                android:background="@mipmap/iv_my_point_score" />

            <TextView
                android:id="@+id/tv_get_money"
                style="@style/my_textview_style_normal_black"
                android:text="提现" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/px_3"
            android:layout_height="match_parent"
            android:background="@color/defaultBackgroundColor" />

        <LinearLayout
            android:id="@+id/ll_my_order"
            android:layout_width="@dimen/px_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/px_5">

            <ImageView
                android:id="@+id/iv_my_order"
                android:layout_width="@dimen/px_60"
                android:layout_height="@dimen/px_50"
                android:background="@mipmap/iv_my_order" />

            <TextView
                android:id="@+id/tv_my_order"
                style="@style/my_textview_style_normal_black"
                android:text="我的订单" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/px_3"
            android:layout_height="match_parent"
            android:background="@color/defaultBackgroundColor" />

        <LinearLayout
            android:id="@+id/ll_coupon"
            android:layout_width="@dimen/px_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/px_5">

            <ImageView
                android:id="@+id/iv_coupon"
                android:layout_width="@dimen/px_60"
                android:layout_height="@dimen/px_50"
                android:background="@mipmap/iv_coupon" />

            <TextView
                android:id="@+id/tv_coupon"
                style="@style/my_textview_style_normal_black"
                android:text="优惠券" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_3"
        android:background="@color/defaultBackgroundColor" />

    <ScrollView
        android:id="@+id/scrollView_mine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_0"
        android:layout_weight="1">

        <include
            android:id="@+id/mine_list"
            layout="@layout/layout_mine_list_new" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_home_bottom_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_actionbar_item_height"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/ll_home_homepage"
            android:layout_width="@dimen/px_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_home_homepage"
                android:layout_width="@dimen/px_30"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_margin="@dimen/px_10"
                android:layout_weight="1"
                android:background="@mipmap/iv_home_homepage" />

            <TextView
                android:id="@+id/tv_home_homepage"
                style="@style/my_textview_style_normal_default_nopadding"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:text="@string/homepage"
                android:textColor="@color/lightgray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_car_type"
            android:layout_width="@dimen/px_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_car_type"
                android:layout_width="@dimen/px_35"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_margin="@dimen/px_10"
                android:layout_weight="1"
                android:background="@mipmap/iv_car_type" />

            <TextView
                android:id="@+id/tv_car_type"
                style="@style/my_textview_style_normal_default_nopadding"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/car_type"
                android:textColor="@color/lightgray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home_I"
            android:layout_width="@dimen/px_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="4">

            <ImageView
                android:id="@+id/iv_home_I"
                android:layout_width="@dimen/px_35"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_margin="@dimen/px_10"
                android:layout_weight="2"
                android:background="@mipmap/iv_home_i_choosed" />

            <TextView
                android:id="@+id/tv_home_I"
                style="@style/my_textview_style_normal_default_nopadding"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="@string/I"
                android:textColor="@color/themeBlue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home_mail_list"
            android:layout_width="@dimen/px_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_home_mail_list"
                android:layout_width="@dimen/px_35"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_margin="@dimen/px_10"
                android:layout_weight="1"
                android:background="@mipmap/iv_home_mail_list" />

            <TextView
                android:id="@+id/tv_home_mail_list"
                style="@style/my_textview_style_normal_default_nopadding"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/mail_list"
                android:textColor="@color/lightgray" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
