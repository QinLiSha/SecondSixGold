<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lisa.administrator.sixgold.activity.home.MineActivity">

    <com.lisa.administrator.sixgold.view.ActionBarTwoImg
        android:id="@+id/actionbarView_twoImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView_mine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_0"
        android:layout_weight="1">

        <include
            android:id="@+id/mine_list"
            layout="@layout/layout_mine_list" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_home_bottom_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_actionbar_item_height"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/ll_home_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageView
                android:id="@+id/iv_home_homepage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@drawable/ic_person_outline_black_24dp" />

            <TextView
                android:id="@+id/tv_home_homepage"
                style="@style/my_textview_style_normal_default_nopadding"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_weight="2"

                android:text="@string/homepage"
                android:textColor="@color/lightgray" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageView
                android:id="@+id/iv_car_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@drawable/ic_local_shipping_black_24dp" />

            <TextView
                android:id="@+id/tv_car_type"
                style="@style/my_textview_style_normal_default_nopadding"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="@string/car_type"
                android:textColor="@color/lightgray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home_I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageView
                android:id="@+id/iv_home_I"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@drawable/ic_person_outline_blue_24dp" />

            <TextView
                android:id="@+id/tv_home_I"
                style="@style/my_textview_style_normal_default_nopadding"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_0"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="@string/I"
                android:textColor="@color/themeBlue" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
