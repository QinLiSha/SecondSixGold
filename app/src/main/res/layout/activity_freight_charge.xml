<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_freight_charge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lisa.administrator.sixgold.activity.mine.FreightChargeActivity">

    <com.lisa.administrator.sixgold.view.ActionBarTwoImg
        android:id="@+id/actionbarView_twoImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/my_textview_style_normal_default"
        android:layout_margin="@dimen/px_10"
        android:text="查询路线" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_high_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_freight_charge_from_address_1"
            style="@style/my_textview_style_normal_black"
            android:text="出发地"
            android:textSize="@dimen/px_35" />


        <TextView
            android:id="@+id/tv_freight_charge_from_address"
            style="@style/my_textview_style_normal_default"
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/please_choose" />


        <ImageView

            android:id="@+id/iv_freight_charge_from_address_details"
            style="@style/my_imageview_style_normal"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/px_5"
            android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_marginLeft="@dimen/px_130"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_high_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_freight_charge_to_address_1"
            style="@style/my_textview_style_normal_black"
            android:text="目的地"
            android:textSize="@dimen/px_35" />


        <TextView
            android:id="@+id/tv_freight_charge_to_address"
            style="@style/my_textview_style_normal_default"
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/please_choose" />


        <ImageView
            android:id="@+id/iv_freight_charge_to_address_details"
            style="@style/my_imageview_style_normal"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/px_5"
            android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </LinearLayout>

    <TextView
        style="@style/my_textview_style_normal_default"
        android:layout_margin="@dimen/px_10"
        android:text="查询结果" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_high_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/my_textview_style_normal_black"
            android:text="高速优先"
            android:textSize="@dimen/px_35" />


        <TextView
            android:id="@+id/textView9"
            style="@style/my_textview_style_normal_black"
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="---------" />


        <ImageView

            style="@style/my_imageview_style_normal"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/px_5"
            android:background="@drawable/ic_add_location_orange_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_high_item_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/my_textview_style_normal_black"
            android:text="较少费用"
            android:textSize="@dimen/px_35" />


        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="---------" />


        <ImageView
            style="@style/my_imageview_style_normal"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/px_5"
            android:background="@drawable/ic_add_location_blue_24dp" />

    </LinearLayout>
</LinearLayout>
