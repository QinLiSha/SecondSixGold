<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/px_15"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="@dimen/px_15"
        android:background="@drawable/view_border_blue"
        android:padding="@dimen/px_20">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_to_authenticate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_error_red_24dp" />

            <TextView
                style="@style/my_textview_style_normal_default"
                android:text="去认证"
                android:id="@+id/tv_to_authenticate"/>

            <ImageView
                android:id="@+id/iv_to_authenticate_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_chevron_right_grey_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_my_head_image"
                android:layout_width="@dimen/px_90"
                android:layout_height="@dimen/px_90"
                android:layout_gravity="center"
                android:background="@mipmap/qqlogo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_my_name"
                    style="@style/my_textview_style_normal_black"
                    android:text="未认证用户" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_border_blue"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_star_collection_24dp" />

                    <TextView
                        android:id="@+id/tv_vip"
                        style="@style/my_textview_style_small_black"
                        android:text="普通会员"
                        android:textColor="@color/themeBlue" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_200"
        android:layout_marginBottom="@dimen/px_15"
        android:background="@drawable/view_border_red"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/ll_wallet"
            android:layout_width="@dimen/px_70"
            android:layout_height="match_parent"
            android:background="@drawable/view_border_red_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_person_outline_white_24dp" />

            <TextView
                android:id="@+id/tv_wallet"
                style="@style/my_textview_style_normal_white"
                android:gravity="center"
                android:text="钱包" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wallet_money"
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wallet_money"
                android:layout_width="@dimen/px_70"
                android:layout_height="@dimen/px_70"
                android:background="@mipmap/iv_contact_customer_service" />

            <TextView
                android:id="@+id/tv_wallet_money"
                style="@style/my_textview_style_normal_black"
                android:text="提现" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px_10"
            android:layout_marginTop="@dimen/px_10"
            android:background="@color/lightgray" />

        <LinearLayout

            android:id="@+id/ll_wallet_coupon"
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_wallet_coupon"
                android:layout_width="@dimen/px_70"
                android:layout_height="@dimen/px_70"
                android:background="@drawable/ic_local_florist_red_24dp" />

            <TextView
                android:id="@+id/tv_ll_wallet_coupon"
                style="@style/my_textview_style_normal_black"
                android:text="优惠券" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px_10"
            android:layout_marginTop="@dimen/px_10"
            android:background="@color/lightgray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_600"
        android:layout_marginBottom="@dimen/px_15"
        android:background="@drawable/view_border_blue"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="@dimen/px_70"
            android:layout_height="match_parent"
            android:background="@drawable/view_border_blue_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mine"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_person_outline_white_24dp" />

            <TextView
                android:id="@+id/tv_mine"
                style="@style/my_textview_style_normal_white"
                android:gravity="center"
                android:text="我的" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:id="@+id/ll_mine_custom_service"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_custom_service"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@mipmap/iv_contact_customer_service" />

                    <TextView
                        android:id="@+id/tv_custom_service"
                        style="@style/my_textview_style_normal_black"
                        android:text="联系客服" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/px_10"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_mine_message"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_mine_message"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@drawable/ic_local_florist_red_24dp" />

                    <TextView
                        android:id="@+id/tv_mine_message"
                        style="@style/my_textview_style_normal_black"
                        android:text="消息" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/px_10"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_mine_share"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_mine_share"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@mipmap/iv_share_to_friends" />

                    <TextView
                        android:id="@+id/tv_mine_share"
                        style="@style/my_textview_style_normal_black"
                        android:text="分享好友" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:layout_marginLeft="@dimen/px_15"
                android:layout_marginRight="@dimen/px_15"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:id="@+id/ll_mine_store"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_mine_store"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@drawable/ic_local_florist_red_24dp" />

                    <TextView
                        android:id="@+id/tv_mine_store"
                        style="@style/my_textview_style_normal_black"
                        android:text="@string/my_store" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_mine_star"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_mine_star"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@drawable/ic_local_florist_red_24dp" />

                    <TextView
                        android:id="@+id/tv_mine_star"
                        style="@style/my_textview_style_normal_black"
                        android:text="@string/my_favorite" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_mine_order"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_mine_order"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@mipmap/iv_my_order" />

                    <TextView
                        android:id="@+id/tv_mine_order"
                        style="@style/my_textview_style_normal_black"
                        android:text="@string/my_order" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:layout_marginLeft="@dimen/px_15"
                android:layout_marginRight="@dimen/px_15"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:id="@+id/ll_mine_about_us"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_mine_about_us"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@mipmap/iv_about_us" />

                    <TextView
                        android:id="@+id/tv_mine_about_us"
                        style="@style/my_textview_style_normal_black"
                        android:text="@string/about_us" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/px_10"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_mine_setting"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_mine_setting"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@mipmap/iv_agreement_terms" />

                    <TextView
                        android:id="@+id/tv_mine_setting"
                        style="@style/my_textview_style_normal_black"
                        android:text="@string/setting" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/px_10"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_mine_honesty"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_mine_honesty"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@drawable/ic_local_florist_red_24dp" />

                    <TextView
                        android:id="@+id/tv_mine_honesty"
                        style="@style/my_textview_style_normal_black"
                        android:text="诚信中心" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_400"
        android:layout_marginBottom="@dimen/px_25"
        android:background="@drawable/view_border_purple"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_tools"
            android:layout_width="@dimen/px_70"
            android:layout_height="match_parent"
            android:background="@drawable/view_border_purple_background"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_person_outline_white_24dp" />

            <TextView
                android:id="@+id/tv_tools"
                style="@style/my_textview_style_normal_white"
                android:gravity="center"
                android:text="推荐工具" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:id="@+id/ll_tools_insurance"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tools_insurance"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@drawable/ic_local_florist_red_24dp" />

                    <TextView
                        android:id="@+id/tv_tools_insurance"
                        style="@style/my_textview_style_normal_black"
                        android:text="保险" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/px_10"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_tools_counter"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tools_counter"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@drawable/ic_local_florist_red_24dp" />

                    <TextView
                        android:id="@+id/tv_tools_counter"
                        style="@style/my_textview_style_normal_black"
                        android:text="运费计算" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/px_10"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:id="@+id/ll_tools_nearby_service"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tools_nearby_service"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@drawable/ic_local_florist_red_24dp" />

                    <TextView
                        android:id="@+id/tv_tools_nearby_service"
                        style="@style/my_textview_style_normal_black"
                        android:text="附近服务" />

                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:layout_marginLeft="@dimen/px_15"
                android:layout_marginRight="@dimen/px_15"
                android:background="@color/lightgray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_0"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:id="@+id/ll_tools_games"
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_tools_games"
                        android:layout_width="@dimen/px_70"
                        android:layout_height="@dimen/px_70"
                        android:background="@drawable/ic_local_florist_red_24dp" />

                    <TextView
                        android:id="@+id/tv_tools_games"
                        style="@style/my_textview_style_normal_black"
                        android:text="休闲游戏" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/px_10"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!--<ImageView-->
                    <!--android:layout_width="@dimen/px_70"-->
                    <!--android:layout_height="@dimen/px_70"-->
                    <!--android:background="@drawable/ic_local_florist_red_24dp"/>-->
                    <!--<TextView-->
                    <!--style="@style/my_textview_style_normal_black"-->
                    <!--android:text="消息"/>-->

                </LinearLayout>

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/px_10"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:layout_width="@dimen/px_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!--<ImageView-->
                    <!--android:layout_width="@dimen/px_70"-->
                    <!--android:layout_height="@dimen/px_70"-->
                    <!--android:background="@drawable/ic_local_florist_red_24dp"/>-->
                    <!--<TextView-->
                    <!--style="@style/my_textview_style_normal_black"-->
                    <!--android:text="分享好友"/>-->

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

