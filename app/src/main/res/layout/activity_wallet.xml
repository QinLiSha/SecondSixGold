<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wallet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lisa.administrator.sixgold.activity.mine.WalletActivity">


    <com.lisa.administrator.sixgold.view.ActionBarTwoImg
        android:id="@+id/actionbarView_twoImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView22"
        style="@style/my_textview_style_normal_black"
        android:layout_gravity="center"
        android:layout_margin="@dimen/px_40"
        android:text="我的资产（元）" />

    <TextView
        style="@style/my_textview_style_normal_black"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/px_40"
        android:text="15632.00"
        android:textSize="@dimen/px_60" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/px_70"
                android:layout_height="@dimen/px_70"
                android:background="@drawable/ic_check_circle_blue_24dp" />

            <TextView
                style="@style/my_textview_style_normal_blue"
                android:text="充值"
                android:textSize="@dimen/px_40" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/px_70"
                android:layout_height="@dimen/px_70"
                android:background="@drawable/ic_check_circle_blue_24dp" />

            <TextView
                style="@style/my_textview_style_normal_blue"
                android:text="提现"
                android:textSize="@dimen/px_40" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/px_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/px_70"
                android:layout_height="@dimen/px_70"
                android:background="@drawable/ic_check_circle_blue_24dp" />

            <TextView
                style="@style/my_textview_style_normal_blue"
                android:text="转账"
                android:textSize="@dimen/px_40" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView23"
        style="@style/my_textview_style_normal_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_actionbar_item_height"
        android:background="@color/themeBlue"
        android:gravity="center"
        android:text="实名制认证" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/px_70"
            android:layout_height="@dimen/px_70"
            android:background="@drawable/ic_check_circle_blue_24dp" />

        <TextView
            style="@style/my_textview_style_normal_black"
            android:text="银行卡"
            android:textSize="@dimen/px_40" />

    </LinearLayout>

</LinearLayout>
