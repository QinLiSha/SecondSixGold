<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_150"
    android:layout_margin="@dimen/px_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_margin="@dimen/px_10" />

        <ImageView
            android:layout_width="@dimen/px_150"
            android:layout_height="@dimen/px_150"
            android:background="@mipmap/qqlogo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/my_textview_style_normal_black"
                android:text="姓名：张三" />

            <TextView
                style="@style/my_textview_style_normal_black"
                android:text="距离我：100米" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/my_textview_style_normal_black"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="信誉评分：4.8" />

</RelativeLayout>
