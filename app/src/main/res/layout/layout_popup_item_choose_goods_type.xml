<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/themeBlue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:padding="@dimen/px_10">

        <Button
            android:id="@+id/button_cancel"
            style="@style/my_button_style_01"
            android:layout_width="@dimen/px_120"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/px_10"
            android:background="@drawable/gradview_item_box"
            android:text="@string/pickerview_cancel"
            android:textColor="@color/themeBlue" />

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_centerInParent="true"
            android:text="物品类型" />

        <Button
            android:id="@+id/button_sure"
            style="@style/my_button_style_01"
            android:layout_width="@dimen/px_120"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/px_10"
            android:text="@string/sure" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/lightgray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_10" />

    <GridView
        android:id="@+id/gridview_choose_goods_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_350"
        android:numColumns="2"></GridView>

</LinearLayout>
