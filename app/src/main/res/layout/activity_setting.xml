<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lisa.administrator.sixgold.activity.mine.SettingActivity">

    <com.lisa.administrator.sixgold.view.ActionBarTwoImg
        android:id="@+id/actionbarView_twoImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_centerVertical="true"
            android:text="修改密码" />

        <ImageView
            style="@style/my_imageview_style_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_chevron_right_grey_24dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/lightgray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_centerVertical="true"
            android:text="常见问题" />

        <ImageView
            style="@style/my_imageview_style_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_chevron_right_grey_24dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/lightgray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_centerVertical="true"
            android:text="使用须知" />

        <ImageView
            style="@style/my_imageview_style_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_chevron_right_grey_24dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/lightgray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_centerVertical="true"
            android:text="服务条款" />

        <ImageView
            style="@style/my_imageview_style_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_chevron_right_grey_24dp"/>
    </RelativeLayout>

</LinearLayout>
