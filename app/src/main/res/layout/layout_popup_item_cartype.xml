<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/px_200"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/themeBlue"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_all_car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_all_car_type"
                style="@style/my_textview_style_normal_white"
                android:layout_gravity="center"
                android:padding="@dimen/px_25"
                android:text="@string/all" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:background="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_local_city_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_local_city_car"
                style="@style/my_textview_style_normal_white"
                android:layout_gravity="center"
                android:padding="@dimen/px_25"
                android:text="@string/local_city_car" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_long_distant_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_long_distant_car"
                style="@style/my_textview_style_normal_white"
                android:layout_gravity="center"
                android:padding="@dimen/px_25"
                android:text="@string/long_distant_car" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_1"
                android:background="@drawable/popupline_black_grey" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

