<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lisa.administrator.sixgold.activity.mine.MyInformationActivity">

    <com.lisa.administrator.sixgold.view.ActionBarTwoImg
        android:id="@+id/actionbarView_twoImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_centerVertical="true"
            android:text="头像" />

        <ImageView
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_90"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/head" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_centerVertical="true"
            android:text="ID" />

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="ID00000004561" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_centerVertical="true"
            android:text="姓名" />

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="张三" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_centerVertical="true"
            android:text="性别" />

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="男" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">

        <TextView
            android:id="@+id/textView20"
            style="@style/my_textview_style_normal_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="15698754463" />

        <TextView
            android:id="@+id/textView21"
            style="@style/my_textview_style_normal_black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="手机号码" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/lightgray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_100"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">

        <TextView
            style="@style/my_textview_style_normal_black"
            android:layout_centerVertical="true"
            android:text="身份证号码" />

        <TextView
            android:id="@+id/textView19"
            style="@style/my_textview_style_normal_black"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="422511183354628896" />
    </RelativeLayout>



    <Button
        android:id="@+id/btn_sure"
        style="@style/my_button_style_01"
        android:layout_width="600px"
        android:layout_height="@dimen/px_65"
        android:layout_margin="@dimen/px_10"
        android:text="@string/submit" />
</LinearLayout>


