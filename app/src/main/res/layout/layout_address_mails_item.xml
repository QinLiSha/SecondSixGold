<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/px_10"
    android:paddingLeft="@dimen/px_50"
    android:paddingTop="@dimen/px_10">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/px_120"
        android:layout_height="@dimen/px_120" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px_20">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_60"
            android:text="TextView2"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_60"
            android:text="TextView3"
            android:textColor="@color/defaultTextViewColor"
            android:textStyle="italic" />
    </LinearLayout>


</LinearLayout>