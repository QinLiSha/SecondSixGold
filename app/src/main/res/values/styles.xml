<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/lightgray</item>
    </style>
    <!--对话框的样式-->
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>        <!--Dialog的windowFrame框为无-->
        <item name="android:windowIsFloating">true</item><!--：是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!--是否半透明-->
        <item name="android:windowNoTitle">true</item><!--:是否显示title-->
        <item name="android:windowBackground">@color/transparent</item><!--:设置dialog的背景-->
        <item name="android:backgroundDimEnabled">false</item><!--: 背景是否模糊显示-->
    </style>

    <!--按钮的样式-->
    <!--my_button_style_01是按钮的一般样式是蓝色圆角的-->
    <style name="my_button_style_01" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">@dimen/button_normal_width</item>
        <item name="android:layout_height">@dimen/activity_low_item_height</item>
        <item name="android:background">@drawable/button_selector_01</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/px_5</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/px_35</item>
    </style>
    <!--上面是button的样式-->

    <!--下面是输入框的样式-->
    <!--my_edittext_style_normal是一般输入框的样式-->
    <style name="my_edittext_style_normal" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/button_normal_width</item><!--宽度-->
        <item name="android:layout_height">@dimen/activity_low_item_height</item><!--高度-->
        <item name="android:layout_gravity">center</item><!--居中显示-->
        <item name="android:textSize">@dimen/textsize_normal</item><!--字体大小-->
        <item name="android:background">@drawable/edittext_background_normal</item><!--背景色或形状-->
        <item name="android:layout_margin">@dimen/px_10</item><!--外边距是10px-->
        <item name="android:paddingLeft">@dimen/px_10</item><!--左边内边距是10px-->
        <item name="android:lines">1</item><!--只允许是单行输入-->
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <!--my_edittext_style_normal是一般输入框的样式-->
    <style name="my_edittext_style_normal_grey" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/button_normal_width</item><!--宽度-->
        <item name="android:layout_height">@dimen/activity_low_item_height</item><!--高度-->
        <item name="android:layout_gravity">center</item><!--居中显示-->
        <item name="android:textSize">@dimen/textsize_normal</item><!--字体大小-->
        <item name="android:background">@drawable/edittext_background_normal_grey
        </item><!--背景色或形状-->
        <item name="android:layout_margin">@dimen/px_10</item><!--外边距是10px-->
        <item name="android:paddingLeft">@dimen/px_10</item><!--左边内边距是10px-->
        <item name="android:lines">1</item><!--只允许是单行输入-->
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <!--my_edittext_style_normal是一般输入框没有框的样式-->
    <style name="my_edittext_style_normal_no_line" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/button_normal_width</item><!--宽度-->
        <item name="android:layout_height">@dimen/activity_low_item_height</item><!--高度-->
        <item name="android:layout_gravity">center</item><!--居中显示-->
        <item name="android:textSize">@dimen/textsize_small</item><!--字体大小-->
        <item name="android:layout_margin">@dimen/px_10</item><!--外边距是10px-->
        <item name="android:paddingLeft">@dimen/px_10</item><!--左边内边距是10px-->
        <item name="android:lines">1</item><!--只允许是单行输入-->
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <!--my_edittext_style_normal是一般输入框没有框的样式-->
    <!--比较小的输入框-->
    <style name="my_edittext_style_normal_no_line_no_padding" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/button_normal_width</item><!--宽度-->
        <item name="android:layout_height">@dimen/activity_low_item_height</item><!--高度-->
        <item name="android:layout_gravity">center</item><!--居中显示-->
        <item name="android:textSize">@dimen/px_20</item><!--字体大小-->
        <item name="android:layout_marginLeft">@dimen/px_5</item><!--外边距是10px-->
        <item name="android:lines">1</item><!--只允许是单行输入-->
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <!--my_edittext_style_password是密码输入框的样式-->
    <style name="my_edittext_style_password" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/button_normal_width</item><!--宽度-->
        <item name="android:layout_height">@dimen/activity_low_item_height</item><!--高度-->
        <item name="android:layout_gravity">center</item><!--居中显示-->
        <item name="android:textSize">@dimen/textsize_normal</item><!--字体大小-->
        <item name="android:background">@drawable/edittext_background_normal</item><!--背景色或形状-->
        <item name="android:layout_margin">@dimen/px_10</item><!--外边距是10px-->
        <item name="android:paddingLeft">@dimen/px_10</item><!--左边内边距是10px-->
        <item name="android:password">true</item><!--是密码的格式-->
        <item name="android:maxLength">16</item><!--最长是16个字符-->
        <item name="android:lines">1</item><!--只允许是单行输入-->
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:hint">@string/please_enter_password</item>
        <item name="android:digits">@string/password_format</item>
    </style>
    px
    <!--my_edittext_style_password是手机号输入框的样式-->
    <style name="my_edittext_style_telephone_num" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/button_normal_width</item><!--宽度-->
        <item name="android:layout_height">@dimen/activity_low_item_height</item><!--高度-->
        <item name="android:hint">@string/please_enter_phone_number</item>
        <item name="android:layout_gravity">center</item><!--居中显示-->
        <item name="android:textSize">@dimen/textsize_normal</item><!--字体大小-->
        <item name="android:background">@drawable/edittext_background_normal</item><!--背景色或形状-->
        <item name="android:layout_margin">@dimen/px_10</item><!--外边距是10px-->
        <item name="android:paddingLeft">@dimen/px_10</item><!--左边内边距是10px-->
        <item name="android:maxLength">11</item><!--最长是11个字符-->
        <item name="android:lines">1</item><!--只允许是单行输入-->
        <item name="android:inputType">phone</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <!--上面是输入框的样式-->

    <!--下面是字体的样式-->
    <!--textview标题的样式-->
    <style name="my_textview_style_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/px_10</item>
    </style>

    <style name="my_textview_style_normal_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/px_10</item>
    </style>

    <style name="my_textview_style_normal_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:padding">@dimen/px_10</item>
    </style>

    <style name="my_textview_style_small_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="my_textview_style_normal_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:textColor">@color/themeBlue</item>
        <item name="android:padding">@dimen/px_10</item>
    </style>

    <style name="my_textview_style_normal_orange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:padding">@dimen/px_10</item>
    </style>

    <style name="my_textview_style_normal_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/px_10</item>
    </style>

    <style name="my_textview_style_normal_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:padding">@dimen/px_10</item>
    </style>


    <style name="my_textview_style_normal_default_nopadding">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>
    <!--上面是字体的样式-->
    <!--下面是图片的样式-->
    <style name="my_imageview_style_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
